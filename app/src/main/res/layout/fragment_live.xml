<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LiveFragment"
    android:background="@color/Gray"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textviewBatsman"
                    android:text="Batsman"
                    android:singleLine="true"
                    android:padding="3dp"
                    android:layout_margin="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextGray"
                    android:layout_toLeftOf="@+id/relative" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relative"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewRun"
                        android:text="R"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textColor="@color/colorTextGray"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewBowl"
                        android:text="B"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textColor="@color/colorTextGray"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewFour"
                        android:text="4s"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textColor="@color/colorTextGray"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:id="@+id/textviewSix"
                        android:text="6s"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textColor="@color/colorTextGray"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/textviewStrikeRate"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginVertical="8dp"
                        android:gravity="end"
                        android:padding="3dp"
                        android:text="SR"
                        android:textColor="@color/colorTextGray"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewBatsmanp1"
                        android:text="M. S. Dhoni"
                        android:fontFamily="@font/circularstd_medium"
                        android:textColor="@color/green"
                        android:singleLine="true"
                        android:padding="3dp"
                        android:layout_margin="8dp"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/relative1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/relative1"
                        android:layout_alignParentRight="true"
                        tools:ignore="Orientation">

                        <TextView
                            android:gravity="end"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textviewRunp1"
                            android:text="100"
                            android:textColor="@android:color/black"
                            android:padding="3dp"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="2dp"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:gravity="end"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textviewBowlp1"
                            android:text="100"
                            android:padding="3dp"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="2dp"
                            android:textColor="@color/colorTextGray"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:gravity="end"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textviewFourp1"
                            android:text="99"
                            android:padding="3dp"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="2dp"
                            android:textColor="@color/colorTextGray"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/textviewSixp1"
                            android:text="99"
                            android:padding="3dp"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="2dp"
                            android:textColor="@color/colorTextGray"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textviewStrikeRatep1"
                            android:text="999.00"
                            android:gravity="end"
                            android:padding="3dp"
                            android:layout_marginVertical="8dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="5dp"                            android:textColor="@color/colorTextGray"
                            android:textSize="16sp"
                            />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewBatsmanp2"
                        android:text="Bapu"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/circularstd_medium"
                        android:singleLine="true"
                        android:padding="3dp"
                        android:layout_margin="8dp"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/relative2" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/relative2"
                        android:layout_alignParentRight="true"
                        tools:ignore="Orientation">

                        <TextView
                            android:gravity="end"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textviewRunp2"
                            android:text="100"
                            android:padding="3dp"
                            android:textColor="@android:color/black"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="2dp"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:gravity="end"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textviewBowlp2"
                            android:text="100"
                            android:padding="3dp"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="2dp"
                            android:textColor="@color/colorTextGray"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:gravity="end"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textviewFourp2"
                            android:text="99"
                            android:padding="3dp"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="2dp"
                            android:textColor="@color/colorTextGray"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:id="@+id/textviewSixp2"
                            android:text="99"
                            android:padding="3dp"
                            android:layout_marginVertical="8dp"
                            android:layout_marginHorizontal="2dp"
                            android:textColor="@color/colorTextGray"
                            android:textSize="16sp"
                            />

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textviewStrikeRatep2"
                            android:text="999.00"
                            android:gravity="end"
                            android:padding="3dp"
                            android:layout_marginVertical="8dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="5dp"                            android:textColor="@color/colorTextGray"
                            android:textSize="16sp"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textviewBowler"
                    android:text="Bowler"
                    android:singleLine="true"
                    android:padding="3dp"
                    android:layout_margin="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextGray"
                    android:layout_toLeftOf="@+id/relative3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relative3"
                    android:layout_alignParentRight="true"
                    tools:ignore="Orientation">

                    <TextView
                        android:gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewOver"
                        android:text="O"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextGray"
                        />
                    <TextView
                        android:gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewMedan"
                        android:text="M"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextGray"/>
                    <TextView
                        android:gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewRunn"
                        android:text="R"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextGray" />
                    <TextView
                        android:gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewWicket"
                        android:text="W"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextGray"/>
                    <TextView
                        android:gravity="end"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewEconomicrate"
                        android:text="ER"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"                        android:textSize="14sp"
                        android:textColor="@color/colorTextGray"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textviewBowler1"
                    android:text="Bumrah"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/circularstd_medium"
                    android:singleLine="true"
                    android:padding="3dp"
                    android:layout_margin="8dp"
                    android:textSize="16sp"
                    android:layout_toLeftOf="@+id/relative4"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/relative4"
                    android:layout_alignParentRight="true"
                    tools:ignore="Orientation">
                    <TextView
                        android:gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewOver1"
                        android:text="100"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextGray" />
                    <TextView
                        android:gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewMedan1"
                        android:text="100"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextGray"/>
                    <TextView
                        android:gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textviewRun1"
                        android:text="100"
                        android:padding="3dp"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextGray"/>

                    <TextView
                        android:id="@+id/textviewWicket1"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="2dp"
                        android:layout_marginVertical="8dp"
                        android:gravity="end"
                        android:padding="3dp"
                        android:text="10"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textviewEconomicrate1"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:gravity="end"
                        android:padding="3dp"
                        android:text="100"
                        android:textColor="@color/colorTextGray"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textviewCurrentover"
                    android:text="Current Over"
                    android:padding="3dp"
                    android:layout_margin="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextGray"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textviewCurrentover1"
                    android:text="(100)"
                    android:layout_toRightOf="@+id/textviewCurrentover"
                    android:padding="3dp"
                    android:layout_margin="8dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/circularstd_medium"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@android:color/white"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewBalls"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="8dp"
                    >
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>