<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:src="@drawable/ic_back"
            android:background="@android:color/transparent"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"/>

        <TextView
            android:id="@+id/txtSeriesName"
            android:text="1st Match of IPL"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_gravity="center_vertical"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:gravity="center"
            android:weightSum="5"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnTeam1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="CSK"
                    android:textSize="20sp"
                    android:fontFamily="@font/circular_std_black"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#F1CD0C"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:id="@+id/llTeam1Score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTeam1Score"
                        android:text="185"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="-"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtTeam1Wicket"
                        android:text="7"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="("
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtTeam1Over"
                        android:text="20"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text=")"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_weight="3"
                android:text="VS"
                android:fontFamily="@font/circularstd_medium"
                android:gravity="center"
                android:textColor="@color/colorTextLightBlack"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnTeam2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:text="MI"
                    android:textSize="20sp"
                    android:fontFamily="@font/circular_std_black"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="#0C45F1"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:id="@+id/llTeam2Score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTeam2Score"
                        android:text="185"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="-"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtTeam2Wicket"
                        android:text="7"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="("
                        android:layout_marginLeft="5dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txtTeam2Over"
                        android:text="20"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text=")"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/circularstd_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>